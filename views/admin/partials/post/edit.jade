div(ng-controller='PostController' ng-init='findOne()')
	.row
		.col-md-12.col-lg-12
			form(autocomplete='off' ng-submit='update(formData)')
				.row
					.col-sm-6.col-md-6.col-lg-6
						.box.box-primary
							.box-header.with-border
								h3.box-title SEO
								| 								
								.box-tools.pull-right
									span.btn.btn-box-tool(data-widget='collapse')
										i.fa.fa-minus
									| 		                            
									span.btn.btn-box-tool(data-widget='remove')
										i.fa.fa-remove
							| 							
							.box-body
								// name
								.form-group
									label(for='name') Name
									| 									
									input.form-control(type='text' ng-model='formData.name' ng-value='formData.name' ng-required='true')
									| 									
									p.text-danger(ng-bind='error.name')
								// Slug
								.form-group
									label(for='slug') Slug
									| 									
									input.form-control(type='text' ng-model='formData.slug' ng-value='formData.slug')
									| 									
									p.text-danger {!! $errors->post->first('slug') !!}
							| 							
							.box-footer
					| 					
					.col-sm-6.col-md-6.col-lg-6
						.box.box-info
							.box-header.with-border
								h3.box-title Infomation
								| 								
								.box-tools.pull-right
									span.btn.btn-box-tool(data-widget='collapse')
										i.fa.fa-minus
									| 		                            
									span.btn.btn-box-tool(data-widget='remove')
										i.fa.fa-remove
							| 							
							.box-body
								// Category
								.form-group
									label(for='category') Category
									| 									
									select.form-control(ng-model='formData.categories' ui-select2='' multiple='')
										option(ng-repeat='category in categories' value='{{category.id}}' ng-bind='category.name')
									| 									
									p.text-danger(ng-bind='error.categories')
								// Tag
								.form-group
									label(for='tag') Tags
									| 									
									select.form-control(ng-model='formData.tags' ui-select2='{allowClear: false}' multiple='')
										option(ng-repeat='tag in tags' value='{{tag.id}}' ng-bind='tag.name')
									| 									
									p.text-danger(ng-bind='error.categories')
							| 							
							.box-footer
				| 				
				.row
					.col-sm-8.col-md-8.col-lg-8
						.box.box-success
							.box-header.with-border
								h3.box-title Content
								| 								
								.box-tools.pull-right
									span.btn.btn-box-tool(data-widget='collapse')
										i.fa.fa-minus
									| 		                            
									span.btn.btn-box-tool(data-widget='remove')
										i.fa.fa-remove
							| 							
							.box-body
								// Content
								.form-group(ng-controller='EditorController')
									summernote(config='options' ng-model='formData.content')
									| 									
									p.text-danger(ng-bind='error.content')
							| 							
							.box-footer
								// Submit / Create
								button.btn.btn-info(type='submit') Save
								| 								
								a.btn.btn-primary.pull-right(ng-href='/admin/post/create')
									i.fa.fa-plus
					| 					
					.col-sm-4.col-md-4.col-lg-4
						.box.box-info
							.box-header.with-border
								h3.box-title Description
								| 								
								.box-tools.pull-right
									span.btn.btn-box-tool(data-widget='collapse')
										i.fa.fa-minus
									| 		                            
									span.btn.btn-box-tool(data-widget='remove')
										i.fa.fa-remove
							| 							
							.box-body
								// Description
								.form-group
									textarea.form-control(ng-model='formData.description' ng-bind='formData.description' rows='5')
									| 									
									p.text-danger(ng-bind='error.description')
