div(ng-controller='PermissionController' ng-init='getList()')
	.box.box-default
		.box-header.with-border
			h3.box-title List permission
			| 			
			a.pull-right.btn.btn-success(ng-href='/admin/permission/create')
				i.fa.fa-plus
		| 		
		.box-body
			.row
				.col-sm-12.col-md-12.col-lg-12
					label(for='search') Search:
					| 					
					input(type='text' ng-model='search')
			| 			
			table.table.table-hover.table-striped
				thead
					tr
						th ID
						| 						
						th Name
						| 						
						th Role
						| 						
						th Descriptions
						| 						
						th Options
				| 				
				tfoot
					tr
						th ID
						| 						
						th Name
						| 						
						th Role
						| 						
						th Descriptions
						| 						
						th Options
				| 				
				tbody
					tr(dir-paginate='permission in permissions | filter:search | itemsPerPage: itemsPerPage' total-items='totalItems' current-page='currentPage')
						td(ng-bind='permission.id')
						| 						
						td(ng-bind='permission.name')
						| 						
						td(ng-bind='permission.slug')
						| 						
						td(ng-bind='permission.description')
						| 						
						td
							.btn-group
								a.btn.btn-info(ng-href='/admin/permission/{{permission.id}}/edit')
									i.fa.fa-pencil
								| 								
								a.btn.btn-danger(ng-click='remove(permission)')
									i.fa.fa-trash
		| 		
		.box-footer
			dir-pagination-controls(boundary-links='true' on-page-change='pageChanged(newPageNumber)')
