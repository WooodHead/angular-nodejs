header.navbar.navbar-bright.navbar-fixed-top.affix-top(role='banner' data-spy='affix' data-offset-top='80' data-offset-bottom='200')
	.container
		.navbar-header
			button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
				span.sr-only Toggle navigation
				|                 
				span.icon-bar
				|                 
				span.icon-bar
				|                 
				span.icon-bar
			|             
			a#brand.navbar-brand(ng-href='/' title='Blog') Home
		|         
		nav#navbar.collapse.navbar-collapse(role='navigation')
			ul.nav.navbar-nav
			|             
			ul.nav.navbar-nav.navbar-right
				li(ng-if='authUser == null')
					a(ng-href='/auth/register' ng-class="{active:isActive('/auth/register')}") Register
				|                 
				li(ng-if='authUser == null' ng-class="{active:isActive('/auth/login')}")
					a(data-toggle='modal' data-target='#myModal' ng-href='#') Log in
				|                 
				li(ng-if='authUser != null' ng-class="{active:isActive('/users/view/' + authUser.id)}")
					a(ng-href='#') {{authUser.name}}
				|                 
				li(ng-if='authUser != null' ng-click='logout()')
					a(ng-href='#') Log out
div(style='height: 62px; background: #21272d')
