doctype html
html(lang='en' ng-app='Beep')
	head
		meta(charset='utf-8')
		| 		
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		| 		
		meta(name='viewport' content='width=device-width, initial-scale=1')
		| 		
		title Home
		// Bootstrap CSS
		link(rel='stylesheet' type='text/css' href='/assets/bower_components/bootstrap/dist/css/bootstrap.min.css')
		// Font Awesome
		link(rel='stylesheet' href='/assets/bower_components/font-awesome/css/font-awesome.min.css')
		// Custom style
		link(rel='stylesheet' href='/assets/dist/css/home.css')
		// jQuery
		script(src='https://code.jquery.com/jquery.min.js')
		// Angularjs
		script(src='/assets/bower_components/angular/angular.min.js')
		// HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
		// WARNING: Respond.js doesn't work if you view the page via file://
		//if lt IE 9
			script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
			| 	      	
			script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
	| 	
	body(ng-controller='MainController' ng-init='getAuthenticatedUser()')
		#wrap
			include header
			#masthead
				.container
					.row
						.col-sm-7
							h1
								| Bootstrap 
								p.lead
									span(style='color:#CCFF33;') Blog
									|  Themes and Templates
						| 		                
						.col-sm-5
							// ad space
							.pull-right.well.well-lg
								#carbonads-container
									.carbonad
										#azcarbon
											h2 Ads
				// /cont
			| 			
			#main.container
				.row
					div(ng-view='')
					| 					
					.col-sm-3.col-md-3.col-lg-3(ng-controller='RightController')
						.panel.panel-info.box(ng-init='listCategory()')
							.panel-heading
								i.fa.fa-newspaper-o
								|  Category
							| 							
							.list-group
								a.list-group-item(ng-repeat='category in categories' ng-href='/category/{{category.slug}}' ng-bind='category.name')
			// Modal
			#myModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel')
				.modal-dialog(role='document')
					form(ng-controller='AuthController' ng-submit='login()' autocomplete='off')
						.modal-content
							.modal-header
								button.close(type='button' data-dismiss='modal' aria-label='Close')
									span(aria-hidden='true') Ã—
								| 				        		
								h4#myModalLabel.modal-title Login
							| 					      	
							.modal-body
								.form-group
									label.control-label(for='email') Email
									| 				                    
									input.form-control(type='email' ng-model='loginForm.email' placeholder='Email')
									| 				                    
									p.text-danger(ng-bind='errors.email')
								| 				                
								.form-group
									label.control-label(for='password') Password
									| 				                    
									input.form-control(type='password' ng-model='loginForm.password' placeholder='Password')
									| 				                    
									p.text-danger(ng-bind='errors.password')
							| 					      	
							.modal-footer
								span.btn.btn-default(data-dismiss='modal') Close
								| 					        	
								button.btn.btn-primary Login
		include footer
		// ngRoute
		script(src='/assets/bower_components/angular-route/angular-route.min.js')
		// Angular Animate
		script(src='/assets/bower_components/angular-animate/angular-animate.min.js')
		// Satellizer
		script(src='/assets/bower_components/angular-sanitize/angular-sanitize.min.js')
		// Moment
		script(src='/assets/bower_components/moment/moment.js')
		| 	    
		script(src='/assets/bower_components/angular-moment/angular-moment.min.js')
		// Satellizer
		script(src='/assets/bower_components/satellizer/satellizer.min.js')
		// Storage
		script(src='/assets/bower_components/ngstorage/ngStorage.min.js')
		// Restangular
		script(src='/assets/bower_components/lodash/lodash.min.js')
		| 	    
		script(src='/assets/bower_components/restangular/dist/restangular.min.js')
		// Bootstrap
		script(src='/assets/bower_components/AdminLTE/bootstrap/js/bootstrap.min.js')
		// Angular App
		script(src='/assets/dist/js/home.js')
